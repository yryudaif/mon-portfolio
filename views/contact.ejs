<%- include('partials/header') %>

<h2 class="text-3xl font-semibold mb-6 text-center">Contactez-moi</h2>

<% if (message) { %>
  <div class="max-w-xl mx-auto mb-6 p-4 rounded bg-green-100 text-green-800">
    <%= message %>
  </div>
<% } %>

<form action="/contact" method="POST" class="max-w-xl mx-auto space-y-4">
  <div>
    <label class="block mb-1 font-semibold" for="nom">Nom</label>
    <input type="text" id="nom" name="nom" required class="w-full border p-2 rounded">
  </div>

  <div>
    <label class="block mb-1 font-semibold" for="email">Email</label>
    <input type="email" id="email" name="email" required class="w-full border p-2 rounded">
  </div>

  <div>
    <label class="block mb-1 font-semibold" for="message">Message</label>
    <textarea id="message" name="message" required class="w-full border p-2 rounded h-32"></textarea>
  </div>

  <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
    Envoyer
  </button>
</form>

<%- include('partials/footer') %>
